---
import Layout from '../layouts/Layout.astro';
import TimeLine from '../components/TimeLine.astro';
---

<Layout title="Experience">
    <div>
        <div class="text-3xl w-full font-bold mb-5">Experience</div>
    </div>

    <div class="time-line-container grid gap-4 mb-10 text-left">
        <TimeLine
          title="Software Development Engineer II"
          subtitle="From April' 2024 at Amazon"
          desc="Working with Value Added Services(VAS) Purchase team"
        />
        <TimeLine
          title="Software Development Engineer I"
          subtitle="From June' 2022 at March' 2024 at Amazon"
          desc="Worked with Value Added Services(VAS) Purchase team"
        />
        <TimeLine
          title="Software Development Engineer Intern"
          subtitle="From May' 2021 to July' 2021 at Amazon"
          desc="Worked with Value Added Services(VAS) Purchase team"
        />
        <TimeLine
          title="Teaching Assistant"
          subtitle="From 2020 to 2021 at IIT Hyderabad"
          desc="Assisted in teaching the Introduction to Programming, Software Development Fundamentals courses"
        />
        <TimeLine
          title="General Secretary"
          subtitle="From 2020 to 2021 at National Service Scheme, IIT Hyderabad"
        />
        <TimeLine
          title="Events Cordinator"
          subtitle="From 2019 to 2020 at National Service Scheme, IIT Hyderabad"
        />
        <TimeLine
          title="Assistant Manager"
          subtitle="From 2019 to 2020 at National Service Scheme, IIT Hyderabad"
        />
    </div>

</Layout>